</section>
<section class="section contact-section">
    <div class="container">
        <h2 class="title has-text-centered">Contactez-nous</h2>
        <p class="subtitle has-text-centered">Nous sommes à votre écoute pour toute question ou demande.</p>
        <div class="columns">
            <!-- Formulaire de Contact -->
            <div class="column is-half">
                <div class="form-container">
                    <form action="/contact" method="POST">
                        <div class="field">
                            <label class="label">
                                <span class="icon"><i class="fas fa-user"></i></span>
                                Nom
                            </label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Votre nom" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">
                                <span class="icon"><i class="fas fa-envelope"></i></span>
                                Email
                            </label>
                            <div class="control">
                                <input class="input" type="email" placeholder="Votre email" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">
                                <span class="icon"><i class="fas fa-comment"></i></span>
                                Message
                            </label>
                            <div class="control">
                                <textarea class="textarea" placeholder="Votre message" required></textarea>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button type="submit" class="button is-primary">
                                    <span class="icon"><i class="fas fa-paper-plane"></i></span>
                                    <span>Envoyer</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Informations de Contact -->
            <div class="column is-half">
                <div class="contact-info">
                    <p class="subtitle">Ou contactez-nous directement :</p>
                    <div class="info-item">
                        <span class="icon"><i class="fas fa-envelope"></i></span>
                        <p><strong>Email :</strong> contact@fattouma-co.com</p>
                    </div>
                    <div class="info-item">
                        <span class="icon"><i class="fas fa-phone"></i></span>
                        <p><strong>Téléphone :</strong> +33 1 23 45 67 89</p>
                    </div>
                    <div class="info-item">
                        <span class="icon"><i class="fas fa-map-marker-alt"></i></span>
                        <p><strong>Adresse :</strong> 123 Rue de la Bijouterie, Paris, France</p>
                    </div>
                            <!-- Carte Google Maps -->
        <div class="map-container">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.991440608209!2d2.292292615674389!3d48.85837360866186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1633456789012!5m2!1sfr!2sfr"
                width="100%"
                height="250"
                style="border:0;"
                allowfullscreen=""
                loading="lazy">
            </iframe>
        </div>
                </div>
            </div>
        </div>
    </div>
</section>

